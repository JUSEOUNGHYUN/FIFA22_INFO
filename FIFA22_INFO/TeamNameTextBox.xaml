<UserControl x:Class="FIFA22_INFO.TeamNameTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FIFA22_INFO"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <TextBox x:Name="LeagueYear_Textbox" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" Width="117" Height="22" CharacterCasing="Upper" 
                 PreviewTextInput="TeamName_textBox_PreviewTextInput" 
                 TextChanged="TeamName_TextChanged" 
                 PreviewKeyDown="TeamName_PreviewKeyDown"
                 IsReadOnly="False" 
                 Margin="0,10,0,0"/>
    </Grid>
</UserControl>
